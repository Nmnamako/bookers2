<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <%end%>
        </ul>
      <%end%>
      
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", value: @user.name, class:"form-control" %>
        </dev>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="inputName">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-secondary" %><br>
      <%end%>
    </div>
  </div>
</div>