<script src="https://kit.fontawesome.com/093f51139d.js" crossorigin="anonymous"></script>
<main>
  <p class="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'list', book:@book %>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>   </th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |f|%>
                <tr>
                  <td><%= image_tag 'no_image', size: "80x80" %></td>
                  <td><%= link_to book_path(f.id) do %><%= f.title %><%end%></td>
                  <td><%= f.body %></td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</main>