<script src="https://kit.fontawesome.com/093f51139d.js" crossorigin="anonymous"></script>
<main>
  <p class="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'list', book:@book %>
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |f|%>
                <tr>
                  <td><%= image_tag f.get_profile_image(80,80) %></td>
                  <td><%= f.name %></td>
                  <td><%= link_to "Show",user_path(f.id) %></td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</main>