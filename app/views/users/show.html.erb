<div>
  <%= flash[:notice] %>
</div>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <p class="notice"></p>
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fa-solid fa-user-gear"></i>
          <%end%>
        </div>
        <h2 class="mt-3">New book</h2>
        <div class="form_group">
          <%= form_with model: @books, url: '/books', method: :post do |f| %>
            <%= f.label :title %><br />
            <%= f.text_field :title, class:"form-control book-title" %>
            <%= f.label :opinion %><br />
            <%= f.text_area :body, class:"form-control book-body" %>
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          <%end%>
        </div>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>   </th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |f|%>
                <tr>
                  <td><%= image_tag @user.get_profile_image(80,80) %></td>
                  <td><%= link_to book_path(f.id) do %><%= f.title %><%end%></td>
                  <td><%= f.body %></td>
                </tr>
              <%end%>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>