<div>
  <%= flash[:notice] %>
</div>
<main>
  <p class="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fa-solid fa-user-gear"></i>
          <%end%>
        </div>
        
        <h2 class="mt-3">New book</h2>
        <div class="form_group">
          <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <%= f.label :title %><br />
            <%= f.text_field :title, class:"form-control book-title", value:"" %>
            <%= f.label :opinion %><br />
            <%= f.text_area :body, class:"form-control book-body", value:"" %>
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          <%end%>
        </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= link_to books_path(current_user.id) do %>
                  <p><%= @book.user.name %></p>
                <%end%>
              </td>
              <td><%= link_to book_path(@book.id) do %><%= @book.title %><%end%></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success"%></td>
                <td><%= link_to "Destroy", book_path(params[:id]), method: :delete, class:"btn btn-sm btn-danger" %></td>
              <%else%>
                <td></td>
                <td></td>
              <%end%>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>