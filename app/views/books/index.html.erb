<script src="https://kit.fontawesome.com/093f51139d.js" crossorigin="anonymous"></script>
<main>
  
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="error_explanation">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <%end%>
        </ul>
      <%end%>
    </div>
    <div class="row">
      <%= render 'users/list', book:@book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>   </th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          
          <tbody>
            <% @book_all.each do |f|%>
              <tr>
                <td><%= link_to user_path(f.user.id) do %><%= image_tag f.user.get_profile_image(80,80) %><%end%></td>
                <td><%= link_to book_path(f.id) do %><%= f.title %><%end%></td>
                <td><%= f.body %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>